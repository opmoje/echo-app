# Facebook App Configuration (для OAuth авторизации)
# Получить на: https://developers.facebook.com/apps/ → Your App → Settings → Basic
FACEBOOK_APP_ID=your_facebook_app_id_here
FACEBOOK_APP_SECRET=your_facebook_app_secret_here

# Instagram App Configuration (для Webhooks)
# Получить на: https://developers.facebook.com/apps/ → Your App → Instagram API → Settings
INSTAGRAM_APP_SECRET=your_instagram_app_secret_here

# Redirect URI для OAuth
INSTAGRAM_REDIRECT_URI=http://localhost:3000/auth/callback

# Server Configuration
PORT=3000
NODE_ENV=development

# Webhook Configuration
WEBHOOK_VERIFY_TOKEN=your_random_verify_token_here

# Frontend URL
FRONTEND_URL=http://localhost:5173
